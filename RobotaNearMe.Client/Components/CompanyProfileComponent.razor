@using RobotaNearMe.Lib.Modelos

<h3>Profile</h3>

<div class="row">
    <div class="col-md-6">
        <label>PFP:</label>
        <img src="@_company.ProfilePicture"/>
    </div>
    <div class="col-md-6">
        <label>Email:</label>
        <p>@_company.ContactCompany.Email</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <label>Name:</label>
        <p>@_company.Name</p>
    </div>
    <div class="col-md-6">
        <label>Info:</label>
        <p>@_company.Info</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <label>SchoolName:</label>
        <a target="_blank" href="@_company.Website">@_company.Name</a>
    </div>
    <div class="col-md-6">
        <label>City:</label>
        <p>@_company.ContactCompany.City</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <label>Postal:</label>
        <p>@_company.ContactCompany.Postal</p>
    </div>
    <div class="col-md-6">
        <label>Phone:</label>
        <p>@_company.ContactCompany.Phone</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <label>Country:</label>
        <p>@_company.ContactCompany.Country</p>
    </div>
    <div class="col-md-6">
        <label>Address:</label>
        <p>@_company.ContactCompany.Address</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <label>IC:</label>
        <p>@_company.ContactCompany.IC</p>
    </div>
    <div class="col-md-6">
        <label>DIC:</label>
        <p>@_company.ContactCompany.DIC</p>
    </div>
</div>

<iframe src="@($"https://www.google.com/maps?q={_company.ContactCompany.Address} {_company.ContactCompany.Postal} {_company.ContactCompany.City}&output=embed")"></iframe>
<button type="submit" @onclick="OnClick" class="w-100 btn btn-lg btn-primary">Update your company profile</button>

