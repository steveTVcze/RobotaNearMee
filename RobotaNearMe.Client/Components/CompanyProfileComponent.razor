<button type="submit" @onclick="OnClickAdmin" class="w-100 btn btn-lg btn-primary">Update your admin profile</button>


<iframe src="@($"https://www.google.com/maps?q={@_company.Admin.Contact.Address} {@_company.Admin.Contact.Postal} {@_company.Admin.Contact.City}&output=embed")"></iframe>
@inject NavigationManager NavigationManager
@code {
    [Parameter] public CompanyReal _company { get; set; }
    private string _userId;
    private string _companyId;
    private void OnClickAdmin()
    {
        _userId = _company.Admin.Id.ToString();
        NavigationManager.NavigateTo($"/updateprofile");
    }
    private void OnClick()
    {
        _companyId = _company.Id.ToString();
        NavigationManager.NavigateTo($"/updatecompany/{_companyId}");
    }
}
